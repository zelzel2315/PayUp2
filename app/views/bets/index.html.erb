
<%= render 'layouts/nav' %>

<%= link_to new_bet_path(@current_user_id) do %>
  <button type="button" class="btn btn-default col-md-2 col-md-offset-5">Place A Bet</button>
<% end %>
<%= @current_user_id %>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<table class="table table-hover">
			<thead>
				<h3>All Bets</h3>
				<tr>
					<th><div class="challenge">Challenge</th>
					<th><div class="amount">Amount</th>
					<th><div class="challenger">Challenger</th>
					<th><div class="challengee">Challengee</th>
					<th><div class="settle">Settle</th>
				</tr>
			</thead>
			<tbody>
				
			</tbody>
		</table>
	</div>
</div> 
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<table class="table table-hover">
			<thead>
				<h3>Bets Pending</h3>
				<tr>
					<th><div class="challenge">Challenge</th>
					<th><div class="amount">Amount</th>
					<th><div class="challenger">Challenger</th>
					<th><div class="challengee">Challengee</th>
				</tr>
			</thead>
			<tbody>
				<% @bets.with_pending_state.each do |p| %>
				<tr>
					<td><%= p.challenge %></td>
					<td>$<%= p.amount %>0</td>
					<td><%= p.challenger %></td>
					<td><%= p.challengee %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div> 
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<table class="table table-hover">
			<thead>
				<h3>Bets Accepted</h3>
				<tr>
					<th><div class="challenge">Challenge</th>
					<th><div class="amount">Amount</th>
					<th><div class="challenger">Challenger</th>
					<th><div class="challengee">Challengee</th>
				</tr>
			</thead>
			<tbody>
				<% @bets.with_accepted_state.each do |p| %>
				<tr>
					<td><%= p.challenge %></td>
					<td><%= p.amount %></td>
					<td><%= p.challenger %></td>
					<td><%= p.challengee %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<table class="table table-hover">
			<thead>
				<h3>Bets Rejected</h3>
				<tr>
					<th><div class="challenge">Challenge</th>
					<th><div class="amount">Amount</th>
					<th><div class="challenger">Challenger</th>
					<th><div class="challengee">Challengee</th>
				</tr>
			</thead>
			<tbody>
				<% @bets.with_rejected_state.each do |p| %>
				<tr>
					<td><%= p.challenge %></td>
					<td><%= p.amount %></td>
					<td><%= p.challenger %></td>
					<td><%= p.challengee %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

